<script>
const sliderWrapper = document.querySelector(".slider-wrapper");
const sliderImages = document.querySelectorAll(".slider-wrapper img");
const sliderDots = document.querySelector(".slider-dots");
const sliderPrev = document.querySelector(".slider-prev");
const sliderNext = document.querySelector(".slider-next");
const slideWidth = sliderImages[0].clientWidth;
let slideIndex = 0;

// Create dots
sliderImages.forEach((_, index) => {
  const dot = document.createElement("div");
  dot.classList.add("slider-dot");
  dot.addEventListener("click", () => {
    goToSlide(index);
  });
  sliderDots.appendChild(dot);
});

// Set active dot
const setActiveDot = (index) => {
  const dots = document.querySelectorAll(".slider-dot");
  dots.forEach((dot) => {
    dot.classList.remove("active");
  });
  dots[index].classList.add("active");
};

// Go to slide
const goToSlide = (index) => {
  if (index < 0 || index >= sliderImages.length) {
    return;
  }
  sliderWrapper.style.transform = `translateX(-${slideWidth * index}px)`;
  slideIndex = index;
  setActiveDot(slideIndex);
};

// Previous slide
sliderPrev.addEventListener("click", () => {
  slideIndex--;
  if (slideIndex < 0) {
    slideIndex = sliderImages.length - 1;
  }
  goToSlide(slideIndex);
});

// Next slide
sliderNext.addEventListener("click", () => {
  slideIndex++;
  if (slideIndex >= sliderImages.length) {
    slideIndex = 0;
  }
  goToSlide(slideIndex);
});

// Auto slide
setInterval(() => {
  slideIndex++;
  if (slideIndex >= sliderImages.length) {
    slideIndex = 0;
  }
  goToSlide(slideIndex);
}, 5000);

</script>