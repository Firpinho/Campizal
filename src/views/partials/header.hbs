<header>
  <nav>
  <div class="logo">
    <img src="/img/log.webp" alt="Logo">
  </div>
  <ul class="nav-links">
    <li><a id="home">Home</a></li>
    <li><a id="nosotros">Nosotros</a></li>
    <li><a id="presupuestos">Presupuestos</a></li>
    <li><a href="oportunidades">Oportunidades</a></li>
    <li><a href="#">Contacto</a></li>
  </ul>
  <div class="burger">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
  </div>
</nav>
</header>

<script>
const burger = document.querySelector('.burger');
const navLinks = document.querySelector('.nav-links');
const links = document.querySelectorAll('.nav-links li');

burger.addEventListener('click', () => {
  // Toggle Nav
  navLinks.classList.toggle('nav-active');

  // Animate Links
  links.forEach((link, index) => {
    if (link.style.animation) {
      link.style.animation = '';
    } else {
      link.style.animation = `navLinkFade 0.5s ease forwards ${index / 7 + 0.3}s`;
    }
  });

  // Burger Animation
  burger.classList.toggle('toggle');
});

const scrollBtn = document.getElementById("nosotros");

scrollBtn.addEventListener('click', () => {
    window.location.href = "/#nosotros";
    scroll(window.location.hash);
});

const scrollBtn_home = document.getElementById("home");

scrollBtn_home.addEventListener('click', () => {
    window.location.href = "/#home";
    scroll(window.location.hash);
});

const scrollBtn_pre = document.getElementById("presupuestos");

scrollBtn_pre.addEventListener("click", () => {
      window.location.href = "/#seccion-presupuestos";
      scroll(window.location.hash);
});

window.addEventListener('load', () => {
  scroll(window.location.hash);
})

function scroll(hash){
  switch(hash){
    case "#nosotros":
            window.scrollTo({
              top: 800,
              behavior: 'smooth'
            });
        break;
    case "#seccion-presupuestos":
            window.scrollTo({
              top: 1600,
              behavior: 'smooth'
            });
        break;
    case "#home":
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        break;
  }
}


</script>